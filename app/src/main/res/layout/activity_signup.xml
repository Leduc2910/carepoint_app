<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/brand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignupActivity">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusableInTouchMode="true">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline10">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    app:srcCompat="@drawable/ic_logo" />

                <TextView
                    android:id="@+id/textView12"
                    style="@style/Text.Title22px.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carepoint"
                    android:textColor="@color/text_invert" />

            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.23" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_login_white"
                android:orientation="vertical"
                android:paddingHorizontal="25dp"
                android:paddingVertical="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline14"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/textView14"
                    style="@style/Text.Title22px.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký"
                    android:textColor="@color/text_primary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView15"
                        style="@style/Text.Body16px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Họ tên"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/edtNameRegis"
                        style="@style/Text.Body16px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/textfield_normal"
                        android:ems="10"
                        android:hint="Nhập tên của bạn"
                        android:inputType="text"
                        android:paddingHorizontal="20sp"
                        android:paddingVertical="10dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        app:backgroundTint="@null" />

                    <TextView
                        android:id="@+id/txtErrorNameRes"
                        style="@style/Text.Caption14px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:paddingHorizontal="20dp"
                        android:text="TextView"
                        android:textColor="@color/error"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textView17"
                        style="@style/Text.Body16px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Số điện thoại"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/edtPhoneRegis"
                        style="@style/Text.Body16px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/textfield_normal"
                        android:ems="10"
                        android:hint="Nhập số điện thoại"
                        android:inputType="text"
                        android:paddingHorizontal="20sp"
                        android:paddingVertical="10dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        app:backgroundTint="@null" />

                    <TextView
                        android:id="@+id/txtErrorPhoneRegis"
                        style="@style/Text.Caption14px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:paddingHorizontal="20dp"
                        android:text="TextView"
                        android:textColor="@color/error"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textView20"
                        style="@style/Text.Body16px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Mật khẩu"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/edtPassRegis"
                        style="@style/Text.Body16px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/textfield_normal"
                        android:ems="10"
                        android:hint="Mật khẩu mới"
                        android:inputType="textPassword"
                        android:paddingHorizontal="20sp"
                        android:paddingVertical="10dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        app:backgroundTint="@null" />

                    <TextView
                        android:id="@+id/txtErrorPassRegis"
                        style="@style/Text.Caption14px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:paddingHorizontal="20dp"
                        android:text="TextView"
                        android:textColor="@color/error"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textView21"
                        style="@style/Text.Body16px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Nhập lại mật khẩu"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/edtConfirmPassRegis"
                        style="@style/Text.Body16px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/textfield_normal"
                        android:ems="10"
                        android:hint="Nhập lại mật khẩu mới"
                        android:inputType="textPassword"
                        android:paddingHorizontal="20sp"
                        android:paddingVertical="10dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        app:backgroundTint="@null" />

                    <TextView
                        android:id="@+id/txtErrorConPassRegis"
                        style="@style/Text.Caption14px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="TextView"
                        android:textColor="@color/error"
                        android:visibility="gone" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSignup"
                    style="@style/Text.Body18px.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_primary_btn"
                    android:text="Đăng ký"
                    android:textColor="@color/spe_text_white"
                    app:backgroundTint="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="45dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView23"
                        style="@style/Text.Body16px.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Hoặc đăng nhập bằng"
                        android:textColor="@color/text_secondary" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        app:srcCompat="@drawable/ic_google" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="75dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView24"
                            style="@style/Text.Body16px.Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="Bạn đã có tài khoản?"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/goToLogin"
                            style="@style/Text.Body16px.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đăng nhập"
                            android:textColor="@color/accent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/viewWhiteOverlay2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarRegister"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/brand"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>