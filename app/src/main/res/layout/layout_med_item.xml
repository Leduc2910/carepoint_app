<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_marginEnd="@dimen/spacing_16dp"
            android:layout_width="wrap_content"
            app:cardElevation="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/bg_item_func"
                android:padding="10dp"
                android:id="@+id/imgMedCheck"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.Body16px.Regular"
                    android:textColor="@color/text_primary"
                    android:id="@+id/txtMedNameCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Augmentin (Amoxicillin/Clavulanate)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.Body16px.Regular"
                    android:textColor="@color/text_secondary"
                android:id="@+id/txtMedQuantityUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x1 Vỉ" />

                <TextView
                    style="@style/Text.Body16px.Medium"
                    android:textColor="@color/text_primary"
                    android:id="@+id/txtMedPriceCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10,000 đ" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>