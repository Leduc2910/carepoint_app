<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rdSelectDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonTint="@color/brand" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDeliveryName"
                style="@style/Text.Caption14px.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giao hàng nhanh"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/txtDeliveryDescribe"
                style="@style/Text.Caption14px.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="(Nhận hàng trong 2 giờ)"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDeliveryPrice"
                style="@style/Text.Body16px.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50,000"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/textView73"
                style="@style/Text.Body16px.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" đ"
                android:textColor="@color/text_primary" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>