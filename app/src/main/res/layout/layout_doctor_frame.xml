<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_func"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDoctorItem"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/img_doctor_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/txtSpeDoc"
                style="@style/Text.Caption12px.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_category_selected"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Bác sĩ tim mạch"
                android:textColor="@color/spe_tag_text" />

            <TextView
                android:id="@+id/txtDoctorName"
                style="@style/Text.Body16px.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ts. Nguyễn Hoàng Phúc"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3dp"
                        app:srcCompat="@drawable/ic_star" />

                    <TextView
                        android:id="@+id/textView39"
                        style="@style/Text.Caption12px.Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4,7"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3dp"
                        app:srcCompat="@drawable/ic_pin_solid" />

                    <TextView
                        android:id="@+id/txtDetailDosage"
                        style="@style/Text.Caption12px.Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="800 m"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
