<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bg_item_white_no_stroke"
        android:orientation="horizontal"
        android:padding="12dp">

        <CheckBox
            android:id="@+id/cbSelectBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/imgCartMed"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_item_func"
                app:srcCompat="@drawable/img_recent_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCartMedName"
                    style="@style/Text.Body16px.Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="2"
                    android:text="Siro ống uống Canxi-D3-K2 5ml Kingphar bổ sung canxi &amp; vitamin D3 cho cơ thể (6 vỉ x 5 ống)"
                    android:textColor="@color/text_primary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCartPrice"
                        style="@style/Text.Body16px.Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10,000 đ" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/btnMinusQuantity"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_cate_default_2"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:backgroundTint="@null"
                            app:cardCornerRadius="1000dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/imgMinus"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                app:tint="@color/text_secondary"
                                app:srcCompat="@drawable/ic_minus" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtCartQuantity"
                            style="@style/Text.Body18px.Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="1"
                            android:textColor="@color/text_primary" />

                        <LinearLayout
                            android:id="@+id/btnPlusQuantity"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_cate_default_2"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:backgroundTint="@null"
                            app:cardCornerRadius="1000dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/imgPlus"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                app:tint="@color/text_secondary"
                                app:srcCompat="@drawable/ic_plus" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>