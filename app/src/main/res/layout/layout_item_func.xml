<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/bg_item_func"
        android:backgroundTint="@null"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:minWidth="130dp"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFuncItem"
                android:layout_width="60dp"
                android:layout_height="68dp"
                app:srcCompat="@drawable/ic_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/ic_rightarrow" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/Text.Body16px.Medium"
                android:textColor="@color/text_primary"
                android:id="@+id/titleFuncItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đặt lịch khám bệnh" />

            <TextView
                style="@style/Text.Caption14px.Regular"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="10dp"
                android:id="@+id/desFuncItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đặt lịch khám với bác sĩ phù hợp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>